@model List<SellerEngine.RootUser>
@{
    ViewBag.Title = "Root Users";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <h4>
        Set up Root User
    </h4>
    <div class="form-horizontal">
        @using (Html.BeginForm("NewRoot", "Test", FormMethod.Post))
        {
            <div class="form-group">
                <div class="col-lg-16">
                    <div class="col-lg-4">
                        Nick Name
                    </div>
                    <div class="col-lg-8">
                        <input type="text" name="txtName" id="txtName" class="form-control" />
                    </div>
                    <div class="col-lg-4">
                        <button type="submit" class="btn btn-primary">Add New</button>
                    </div>
                </div>
            </div>
        }       
        <div class="form-group">
            <div class="col-lg-16">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Root User #
                            </th>
                            <th>
                                User Name
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    <a href="/Test/Users?id=@item.Id">Continue as @item.NickName</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>